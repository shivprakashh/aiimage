<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Google Login</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <meta name="google-signin-client_id" content="983464479566-r438etdv4jda37vn9uult3f2o08rt60a.apps.googleusercontent.com">
    
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Madimi+One&family=Mulish:wght@200..1000&family=Roboto:wght@100..900&family=Sigmar&display=swap" rel="stylesheet">

    <style>
        body, html {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background: url("/videos/bb.png") no-repeat center center fixed;
            background-size: cover;
        } 
        .con {
            width: 100%;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login {
            width: 400px;
            height: auto;
            box-sizing: border-box;
            background-color: white;
            box-shadow: 0px 0px 7px 1px rgba(67, 66, 66, 0.647);
            padding: 12px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            cursor: pointer;
        }
        h3 {
            text-align: center;
            font-family: "Mulish", sans-serif;
            font-weight: 800;
            color: rgb(41, 41, 41);
            margin: 0;
        }
        .logo {
            width: 30px;
            height: auto;
        }
        #googleLogi{
            width:300px;
            
           
        }
    </style>
</head>
<body>

<div class="con">
    <div  id="googleLogi">
      
    </div>
</div>

<script>
   
    function handleCredentialResponse(response) {
       if(response){
        const responsePayload = JSON.parse(atob(response.credential.split('.')[1]));
        console.log("ID:", responsePayload.sub);
        console.log("Name:", responsePayload.name);
        console.log("Email:", responsePayload.email);
        console.log("Picture:", responsePayload.picture);
       }else{
        alert("error in login")
       }
    }

    window.onload = function () {
        google.accounts.id.initialize({
            client_id: "983464479566-r438etdv4jda37vn9uult3f2o08rt60a.apps.googleusercontent.com",
            callback: handleCredentialResponse
        });

        google.accounts.id.renderButton(
            document.getElementById("googleLogi"),
            { theme: "filled_black", size: "large" ,shape:"circle"}
        );
    };
</script>

</body>
</html>
